<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
        VaultScope Security Suppressions
        
        This file contains suppressions for known false positives in the OWASP Dependency Check.
        Each suppression should be documented with a reason and reviewed regularly.
    -->
    
    <!-- JavaFX suppression - these are false positives for GUI applications -->
    <suppress>
        <notes>JavaFX is required for the GUI and is not vulnerable in offline desktop usage</notes>
        <packageUrl regex="true">^pkg:maven/org\.openjfx/.*$</packageUrl>
        <cve>CVE-2021-35550</cve>
        <cve>CVE-2021-35556</cve>
        <cve>CVE-2021-35559</cve>
    </suppress>
    
    <!-- Jackson suppression - we use specific versions and validate input -->
    <suppress>
        <notes>Jackson vulnerabilities are mitigated by input validation and offline usage</notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\.core/.*$</packageUrl>
        <cve>CVE-2022-42003</cve>
        <cve>CVE-2022-42004</cve>
    </suppress>
    
    <!-- SQLite JDBC suppression - local database only -->
    <suppress>
        <notes>SQLite is used for local storage only, no network exposure</notes>
        <packageUrl regex="true">^pkg:maven/org\.xerial/sqlite-jdbc.*$</packageUrl>
        <cve>CVE-2023-32697</cve>
    </suppress>
    
    <!-- HttpClient suppression - localhost only -->
    <suppress>
        <notes>HttpClient is configured for localhost testing only</notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.httpcomponents\.client5/.*$</packageUrl>
        <cve>CVE-2020-13956</cve>
    </suppress>
    
    <!-- Bouncy Castle suppression - specific use case -->
    <suppress>
        <notes>Bouncy Castle used for JWT validation only, not for general cryptography</notes>
        <packageUrl regex="true">^pkg:maven/org\.bouncycastle/.*$</packageUrl>
        <cve>CVE-2023-33201</cve>
    </suppress>
    
    <!-- Development dependencies that don't affect production -->
    <suppress>
        <notes>Development/test dependencies don't affect production security</notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\.jupiter/.*$</packageUrl>
        <cve>.*</cve>
    </suppress>
    
    <suppress>
        <notes>Development/test dependencies don't affect production security</notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/.*$</packageUrl>
        <cve>.*</cve>
    </suppress>
</suppressions>