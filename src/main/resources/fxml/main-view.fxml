<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.cptcr.vaultscope.controller.EnhancedMainController">
   <left>
      <VBox prefWidth="280.0" styleClass="sidebar">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label styleClass="sidebar-title" text="VaultScope" />
            <Label styleClass="sidebar-subtitle" text="Enterprise API Security Assessment" />
            <Separator>
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
            </Separator>
            
            <Label styleClass="section-header" text="Target Configuration">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="targetUrlField" promptText="localhost:8080" styleClass="url-field">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </TextField>
            
            <Label styleClass="section-header" text="Authentication">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="authTypeComboBox" promptText="Select Auth Type" styleClass="auth-combo">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </ComboBox>
            
            <VBox fx:id="authConfigContainer" spacing="8.0">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </VBox>
            
            <Button fx:id="scanButton" styleClass="primary-button" text="🔍 Start Security Scan">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </Button>
            
            <Label styleClass="section-header" text="Security Score">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="securityScoreLabel" styleClass="score-label" text="Score: --">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </Label>
            
            <Label styleClass="section-header" text="Export Reports">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="exportJsonButton" styleClass="secondary-button" text="📄 Export JSON">
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exportHtmlButton" styleClass="secondary-button" text="🌐 Export HTML">
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin>
            </Button>
            
            <Region VBox.vgrow="ALWAYS" />
            
            <Separator>
               <VBox.margin>
                  <Insets bottom="15.0" top="15.0" />
               </VBox.margin>
            </Separator>
            <Button fx:id="toggleThemeButton" styleClass="theme-button" text="🌙 Dark Theme" />
         </children>
      </VBox>
   </left>
   
   <center>
      <VBox styleClass="main-content">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <ProgressBar fx:id="scanProgress" prefWidth="250.0" visible="false" />
                  <Label fx:id="statusLabel" styleClass="status-label" text="Ready to scan localhost APIs" />
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </HBox>
            
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
               <tabs>
                  <Tab text="🛡️ Vulnerabilities">
                     <content>
                        <SplitPane dividerPositions="0.65" orientation="VERTICAL">
                           <items>
                              <VBox>
                                 <children>
                                    <Label styleClass="content-header" text="Security Vulnerabilities">
                                       <VBox.margin>
                                          <Insets bottom="10.0" />
                                       </VBox.margin>
                                    </Label>
                                    <TableView fx:id="vulnerabilityTable" VBox.vgrow="ALWAYS">
                                       <columns>
                                          <TableColumn fx:id="severityColumn" prefWidth="90.0" text="Severity" />
                                          <TableColumn fx:id="typeColumn" prefWidth="180.0" text="Type" />
                                          <TableColumn fx:id="endpointColumn" prefWidth="220.0" text="Endpoint" />
                                          <TableColumn fx:id="descriptionColumn" prefWidth="350.0" text="Description" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label styleClass="content-header" text="Vulnerability Details">
                                       <VBox.margin>
                                          <Insets bottom="10.0" />
                                       </VBox.margin>
                                    </Label>
                                    <TextArea fx:id="vulnerabilityDetailsArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>
                           </items>
                        </SplitPane>
                     </content>
                  </Tab>
                  <Tab text="📊 Traffic Log">
                     <content>
                        <VBox>
                           <children>
                              <Label styleClass="content-header" text="HTTP Traffic Monitor">
                                 <VBox.margin>
                                    <Insets bottom="10.0" />
                                 </VBox.margin>
                              </Label>
                              <TextArea fx:id="trafficLogArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </VBox>
   </center>
</BorderPane>