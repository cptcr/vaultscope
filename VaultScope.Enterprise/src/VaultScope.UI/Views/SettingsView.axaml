<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VaultScope.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="VaultScope.UI.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="24" Margin="32">
            
            <!-- Header Section -->
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock Text="Settings &amp; Configuration" 
                              FontSize="32" FontWeight="Bold" 
                              Foreground="#FFFFFF"/>
                    <TextBlock Text="Customize your VaultScope experience and configure security scanning options" 
                              FontSize="16" 
                              Foreground="#A0A0A0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Background="#10B981" 
                            Foreground="White"
                            Padding="16,12"
                            CornerRadius="8"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Save" FontSize="16"/>
                            <TextBlock Text="Save Changes"/>
                        </StackPanel>
                    </Button>
                    <Button Background="#EF4444" 
                            Foreground="White"
                            Padding="16,12"
                            CornerRadius="8"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Reset" FontSize="16"/>
                            <TextBlock Text="Reset Defaults"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Settings Grid -->
            <Grid ColumnDefinitions="*,*">
                
                <!-- Left Column -->
                <StackPanel Grid.Column="0" Spacing="20" Margin="0,0,12,0">
                    
                    <!-- General Settings -->
                    <Border Background="#1F1F1F" 
                            CornerRadius="12" 
                            Padding="24"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="General Settings" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF"/>
                            
                            <!-- Theme Selection -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Application Theme" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"/>
                                <ComboBox SelectedIndex="0"
                                         FontSize="14"
                                         Padding="12"
                                         Background="#2A2A2A"
                                         Foreground="#FFFFFF"
                                         BorderBrush="#8B5CF6"
                                         BorderThickness="2"
                                         CornerRadius="6">
                                    <ComboBoxItem Content="Dark Purple (Current)"/>
                                    <ComboBoxItem Content="Dark Blue"/>
                                    <ComboBoxItem Content="Light Theme"/>
                                    <ComboBoxItem Content="Auto (System)"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Notifications Toggle -->
                            <Border Background="#151515" 
                                    CornerRadius="8" 
                                    Padding="16">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="Enable Notifications" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#FFFFFF"/>
                                        <TextBlock Text="Get notified when scans complete or issues are found" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" 
                                             IsChecked="True" 
                                             Foreground="#8B5CF6"/>
                                </Grid>
                            </Border>
                            
                            <!-- Sound Effects Toggle -->
                            <Border Background="#151515" 
                                    CornerRadius="8" 
                                    Padding="16">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="Sound Effects" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#FFFFFF"/>
                                        <TextBlock Text="Play audio alerts for scan events" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" 
                                             IsChecked="False" 
                                             Foreground="#8B5CF6"/>
                                </Grid>
                            </Border>
                            
                            <!-- Auto-Save Toggle -->
                            <Border Background="#151515" 
                                    CornerRadius="8" 
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Auto-Save Results" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#FFFFFF"/>
                                            <TextBlock Text="Automatically save scan results" 
                                                      FontSize="12" 
                                                      Foreground="#A0A0A0"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" 
                                                 IsChecked="True" 
                                                 Foreground="#8B5CF6"/>
                                    </Grid>
                                    
                                    <!-- Auto-save interval -->
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0" 
                                                  Text="Save every" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        <Slider Grid.Column="1" 
                                               Value="300" 
                                               Minimum="60" 
                                               Maximum="600"
                                               Background="#2A2A2A"
                                               Foreground="#8B5CF6"
                                               Margin="8,0,8,0"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="5 min" 
                                                  FontSize="12" 
                                                  Foreground="#8B5CF6"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Network Settings -->
                    <Border Background="#1F1F1F" 
                            CornerRadius="12" 
                            Padding="24"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Network Configuration" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF"/>
                            
                            <!-- Request Timeout -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Request Timeout" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <Slider Grid.Column="0" 
                                           Value="30" 
                                           Minimum="5" 
                                           Maximum="120"
                                           Background="#2A2A2A"
                                           Foreground="#8B5CF6"
                                           Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="30 seconds" 
                                              FontSize="14" 
                                              Foreground="#A0A0A0"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Max Concurrent Requests -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Concurrent Requests" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"/>
                                <Grid ColumnDefinitions="*,Auto">
                                    <Slider Grid.Column="0" 
                                           Value="10" 
                                           Minimum="1" 
                                           Maximum="50"
                                           Background="#2A2A2A"
                                           Foreground="#8B5CF6"
                                           Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="10 requests" 
                                              FontSize="14" 
                                              Foreground="#A0A0A0"
                                              VerticalAlignment="Center"
                                              Margin="12,0,0,0"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- SSL Validation -->
                            <Border Background="#151515" 
                                    CornerRadius="8" 
                                    Padding="16">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="SSL Certificate Validation" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#FFFFFF"/>
                                        <TextBlock Text="Validate SSL certificates (disable for self-signed)" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"/>
                                    </StackPanel>
                                    <CheckBox Grid.Column="1" 
                                             IsChecked="True" 
                                             Foreground="#8B5CF6"/>
                                </Grid>
                            </Border>
                            
                            <!-- User Agent -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="User Agent String" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"/>
                                <TextBox Text="VaultScope/1.0 Security Scanner"
                                        Watermark="Enter custom user agent..."
                                        FontSize="14"
                                        Padding="12"
                                        Background="#2A2A2A"
                                        Foreground="#FFFFFF"
                                        BorderBrush="#2A2A2A"
                                        BorderThickness="1"
                                        CornerRadius="6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
                
                <!-- Right Column -->
                <StackPanel Grid.Column="1" Spacing="20" Margin="12,0,0,0">
                    
                    <!-- Proxy Settings -->
                    <Border Background="#1F1F1F" 
                            CornerRadius="12" 
                            Padding="24"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1">
                        <StackPanel Spacing="20">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0" 
                                          Text="Proxy Configuration" 
                                          FontSize="18" 
                                          FontWeight="SemiBold" 
                                          Foreground="#FFFFFF"/>
                                <CheckBox Grid.Column="1" 
                                         Content="Enable" 
                                         IsChecked="False" 
                                         Foreground="#8B5CF6"/>
                            </Grid>
                            
                            <!-- Proxy fields (shown as disabled) -->
                            <StackPanel Spacing="12" Opacity="0.5">
                                <TextBox Watermark="Proxy Host (e.g., proxy.company.com)"
                                        FontSize="14"
                                        Padding="12"
                                        Background="#2A2A2A"
                                        Foreground="#FFFFFF"
                                        BorderBrush="#2A2A2A"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        IsEnabled="False"/>
                                
                                <Grid ColumnDefinitions="*,*">
                                    <TextBox Grid.Column="0" 
                                            Watermark="Port (8080)"
                                            FontSize="14"
                                            Padding="12"
                                            Background="#2A2A2A"
                                            Foreground="#FFFFFF"
                                            BorderBrush="#2A2A2A"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            IsEnabled="False"
                                            Margin="0,0,6,0"/>
                                    <ComboBox Grid.Column="1" 
                                             SelectedIndex="0"
                                             FontSize="14"
                                             Padding="12"
                                             Background="#2A2A2A"
                                             Foreground="#FFFFFF"
                                             BorderBrush="#2A2A2A"
                                             BorderThickness="1"
                                             CornerRadius="6"
                                             IsEnabled="False"
                                             Margin="6,0,0,0">
                                        <ComboBoxItem Content="HTTP"/>
                                        <ComboBoxItem Content="HTTPS"/>
                                        <ComboBoxItem Content="SOCKS5"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Database Settings -->
                    <Border Background="#1F1F1F" 
                            CornerRadius="12" 
                            Padding="24"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Database Management" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF"/>
                            
                            <!-- Database Stats -->
                            <Grid ColumnDefinitions="*,*">
                                <Border Grid.Column="0" 
                                        Background="#151515" 
                                        CornerRadius="6" 
                                        Padding="12"
                                        Margin="0,0,8,0">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Database Size" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"/>
                                        <TextBlock Text="247 MB" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="#FFFFFF"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" 
                                        Background="#151515" 
                                        CornerRadius="6" 
                                        Padding="12"
                                        Margin="8,0,0,0">
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Total Records" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"/>
                                        <TextBlock Text="1,429" 
                                                  FontSize="18" 
                                                  FontWeight="Bold" 
                                                  Foreground="#FFFFFF"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Auto Cleanup -->
                            <Border Background="#151515" 
                                    CornerRadius="8" 
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Auto-Cleanup" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#FFFFFF"/>
                                            <TextBlock Text="Automatically remove old scan results" 
                                                      FontSize="12" 
                                                      Foreground="#A0A0A0"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" 
                                                 IsChecked="True" 
                                                 Foreground="#8B5CF6"/>
                                    </Grid>
                                    
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0" 
                                                  Text="Keep data for" 
                                                  FontSize="12" 
                                                  Foreground="#A0A0A0"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        <Slider Grid.Column="1" 
                                               Value="90" 
                                               Minimum="7" 
                                               Maximum="365"
                                               Background="#2A2A2A"
                                               Foreground="#8B5CF6"
                                               Margin="8,0,8,0"/>
                                        <TextBlock Grid.Column="2" 
                                                  Text="90 days" 
                                                  FontSize="12" 
                                                  Foreground="#8B5CF6"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Database Actions -->
                            <StackPanel Spacing="12">
                                <Button Background="#2A2A2A" 
                                        Foreground="#FFFFFF" 
                                        Padding="16,12"
                                        CornerRadius="6"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Optimize" FontSize="14"/>
                                        <TextBlock Text="Database"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Background="#EF4444" 
                                        Foreground="White" 
                                        Padding="16,12"
                                        CornerRadius="6"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Clear" FontSize="14"/>
                                        <TextBlock Text="Clear All Data"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Import/Export Settings -->
                    <Border Background="#1F1F1F" 
                            CornerRadius="12" 
                            Padding="24"
                            BorderBrush="#2A2A2A" 
                            BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Import &amp; Export" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FFFFFF"/>
                            
                            <StackPanel Spacing="12">
                                <Button Background="#8B5CF6" 
                                        Foreground="White" 
                                        Padding="16,12"
                                        CornerRadius="6"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Export" FontSize="14"/>
                                        <TextBlock Text="Settings"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Background="#2A2A2A" 
                                        Foreground="#FFFFFF" 
                                        Padding="16,12"
                                        CornerRadius="6"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Import" FontSize="14"/>
                                        <TextBlock Text="Settings"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Background="#2A2A2A" 
                                        Foreground="#FFFFFF" 
                                        Padding="16,12"
                                        CornerRadius="6"
                                        FontSize="14"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Export" FontSize="14"/>
                                        <TextBlock Text="Export All Reports"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <TextBlock Text="Tip: Export your settings to backup your configuration or share with team members" 
                                      FontSize="12" 
                                      Foreground="#A0A0A0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>

            <!-- Unsaved Changes Warning (if applicable) -->
            <Border Background="#D97706" 
                    CornerRadius="8" 
                    Padding="16"
                    IsVisible="False">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <TextBlock Grid.Column="0" 
                              Text="Warning:" 
                              FontSize="18"
                              VerticalAlignment="Center"
                              Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" 
                              Text="You have unsaved changes that will be lost if you navigate away." 
                              FontSize="14" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Grid.Column="2" 
                            Background="#FFFFFF" 
                            Foreground="#D97706" 
                            Padding="12,6"
                            CornerRadius="4"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <TextBlock Text="Save Now"/>
                    </Button>
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>