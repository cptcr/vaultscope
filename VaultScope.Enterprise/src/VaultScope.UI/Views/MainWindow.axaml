<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VaultScope.UI.ViewModels"
        xmlns:controls="using:VaultScope.UI.Controls"
        xmlns:views="using:VaultScope.UI.Views"
        x:Class="VaultScope.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/icon.png"
        Title="VaultScope Enterprise - Professional Security Assessment Platform"
        Width="1680" Height="1050"
        MinWidth="1366" MinHeight="768"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">

    <Window.Styles>
        <!-- 🎨 PROFESSIONAL ENTERPRISE STYLES -->
        
        <!-- REFINED ENTERPRISE NAVIGATION -->
        <Style Selector="Button.nav-enterprise">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{StaticResource SpacingM},{StaticResource SpacingS}"/>
            <Setter Property="Margin" Value="{StaticResource SpacingXXS},2"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusL}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeSmallMedium}"/>
            <Setter Property="MinHeight" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                    <BrushTransition Property="Foreground" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.25" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.nav-enterprise:pointerover">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="RenderTransform" Value="translateX(8px) scale(1.02)"/>
            <Setter Property="Opacity" Value="0.95"/>
        </Style>

        <Style Selector="Button.nav-enterprise.active">
            <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="RenderTransform" Value="translateX(12px)"/>
        </Style>

        <Style Selector="Button.nav-enterprise:pressed">
            <Setter Property="RenderTransform" Value="translateX(4px) scale(0.98)"/>
        </Style>

        <!-- MODERN ACTION BUTTON -->
        <Style Selector="Button.action-enterprise">
            <Setter Property="Background" Value="{StaticResource SecurityGradientBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="{StaticResource SpacingL},{StaticResource SpacingS}"/>
            <Setter Property="Margin" Value="{StaticResource SpacingXXS},{StaticResource SpacingXXS}"/>
            <Setter Property="CornerRadius" Value="{StaticResource RadiusL}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeSmallMedium}"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                    <BrushTransition Property="Background" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.action-enterprise:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.05) translateY(-3px)"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style Selector="Button.action-enterprise:pressed">
            <Setter Property="RenderTransform" Value="scale(0.95) translateY(1px)"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Default title bar -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>    <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- 🎨 REFINED TITLE BAR -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource GlassBrush}"
                Height="56">
            <Border.Effect>
                <DropShadowEffect Color="{StaticResource PrimaryColor}" 
                                Opacity="0.15" 
                                BlurRadius="8"
                                OffsetY="1"/>
            </Border.Effect>
            
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 🏢 ENTERPRISE BRANDING -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           Spacing="12" 
                           VerticalAlignment="Center">
                    <!-- Professional App Icon -->
                    <Border Width="32" Height="32" 
                            CornerRadius="6"
                            Background="{StaticResource SecurityGradientBrush}">
                        <Border.Effect>
                            <DropShadowEffect Color="{StaticResource PrimaryColor}" 
                                            Opacity="0.4" 
                                            BlurRadius="8"/>
                        </Border.Effect>
                        <Path Data="{StaticResource ShieldCheckIcon}" 
                              Fill="White" 
                              Width="18" Height="18"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Modern Typography Title -->
                    <StackPanel VerticalAlignment="Center" Spacing="2">
                        <TextBlock Text="VaultScope Enterprise" 
                                  FontFamily="{StaticResource PrimaryFontFamily}"
                                  FontWeight="SemiBold"
                                  FontSize="16"
                                  Foreground="{StaticResource WhiteTextColor}"/>
                        <TextBlock Text="Professional Security Assessment Platform" 
                                  FontFamily="{StaticResource PrimaryFontFamily}"
                                  FontSize="11"
                                  FontWeight="Medium"
                                  Foreground="{StaticResource SecondaryTextBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Information -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           Spacing="16"
                           VerticalAlignment="Center">
                    <!-- Connection Status -->
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Ellipse Width="8" Height="8" 
                                Fill="{StaticResource SuccessBrush}">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#10B981" 
                                                Opacity="0.6" 
                                                BlurRadius="4"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="SECURE CONNECTION" 
                                  FontSize="9" 
                                  FontWeight="Bold"
                                  Foreground="{StaticResource SuccessBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🏗️ PROFESSIONAL MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>  <!-- Refined sidebar width -->
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 🎯 REFINED NAVIGATION SIDEBAR -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource GlassBrush}">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    Opacity="0.1" 
                                    BlurRadius="10"
                                    OffsetX="2"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Professional Profile -->
                        <RowDefinition Height="*"/>     <!-- Navigation -->
                        <RowDefinition Height="Auto"/>  <!-- Professional Footer -->
                    </Grid.RowDefinitions>

                    <!-- 👤 REFINED USER PROFILE -->
                    <Border Grid.Row="0" 
                            Padding="{StaticResource SpacingL},{StaticResource SpacingL}"
                            BorderThickness="0,0,0,1" 
                            BorderBrush="{StaticResource GlassBrush}"
                            Background="{StaticResource SurfaceBrush}">
                        <StackPanel Spacing="14">
                            <!-- Professional Avatar -->
                            <Border Width="72" Height="72" 
                                    CornerRadius="36"
                                    Background="{StaticResource SecurityGradientBrush}"
                                    HorizontalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect Color="{StaticResource PrimaryColor}" 
                                                    Opacity="0.3" 
                                                    BlurRadius="12"/>
                                </Border.Effect>
                                <Path Data="{StaticResource ShieldIcon}" 
                                      Fill="White" 
                                      Width="36" Height="36"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- Professional User Info -->
                            <StackPanel HorizontalAlignment="Center" Spacing="4">
                                <TextBlock Text="Administrator" 
                                          HorizontalAlignment="Center"
                                          FontWeight="Medium"
                                          FontSize="13"
                                          Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="Enterprise Security Suite" 
                                          HorizontalAlignment="Center"
                                          FontSize="12"
                                          FontWeight="Medium"
                                          Foreground="{StaticResource SecondaryTextBrush}"/>
                                <Border Background="{StaticResource SuccessBrush}"
                                        CornerRadius="10"
                                        Padding="8,3"
                                        HorizontalAlignment="Center"
                                        Margin="0,4,0,0">
                                    <TextBlock Text="● AUTHENTICATED" 
                                              FontSize="9"
                                              FontWeight="Bold"
                                              Foreground="White"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 🧭 REFINED NAVIGATION -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled"
                                 Padding="{StaticResource SpacingM},{StaticResource SpacingL}">
                        <StackPanel Spacing="8">
                            
                            <!-- Security Operations -->
                            <TextBlock Text="SECURITY OPERATIONS" 
                                      FontSize="11" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource PrimaryColor}" 
                                      Margin="10,0,0,10"/>
                            
                            <!-- Professional Dashboard -->
                            <Button Classes="nav-enterprise active" 
                                    Command="{Binding NavigateToDashboardCommand}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Border Grid.Column="0" 
                                            Background="{StaticResource SecurityGradientBrush}"
                                            CornerRadius="5"
                                            Padding="5"
                                            Margin="0,0,14,0">
                                        <Path Data="{StaticResource DashboardIcon}" 
                                              Fill="White" 
                                              Width="16" Height="16" 
                                              Stretch="Uniform"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Security Dashboard" 
                                                  FontWeight="SemiBold"
                                                  FontSize="13"/>
                                        <TextBlock Text="Real-time security overview" 
                                                  FontSize="10"
                                                  Opacity="0.8"/>
                                    </StackPanel>
                                    <Border Grid.Column="2" 
                                            Background="{StaticResource CriticalBrush}" 
                                            CornerRadius="10" 
                                            Padding="6,3"
                                            IsVisible="{Binding HasCriticalAlerts}">
                                        <TextBlock Text="!" 
                                                  FontSize="10" 
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                    </Border>
                                </Grid>
                            </Button>
                            
                            <!-- Professional Scanner -->
                            <Button Classes="nav-enterprise" 
                                    Command="{Binding NavigateToScannerCommand}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Border Grid.Column="0" 
                                            Background="{StaticResource InfoBrush}"
                                            CornerRadius="5"
                                            Padding="5"
                                            Margin="0,0,14,0">
                                        <Path Data="{StaticResource ScanIcon}" 
                                              Fill="White" 
                                              Width="16" Height="16" 
                                              Stretch="Uniform"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Vulnerability Scanner" 
                                                  FontWeight="SemiBold"
                                                  FontSize="13"/>
                                        <TextBlock Text="Advanced threat detection" 
                                                  FontSize="10"
                                                  Opacity="0.8"/>
                                    </StackPanel>
                                    <Border Grid.Column="2"
                                            Background="{StaticResource SuccessBrush}"
                                            CornerRadius="8"
                                            Padding="4"
                                            IsVisible="{Binding IsCurrentlyScanning}">
                                        <Path Data="{StaticResource PlayIcon}" 
                                              Fill="White" 
                                              Width="8" Height="8"
                                              Stretch="Uniform"/>
                                    </Border>
                                </Grid>
                            </Button>
                            
                            <!-- Professional Reports -->
                            <Button Classes="nav-enterprise" 
                                    Command="{Binding NavigateToReportsCommand}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <Border Grid.Column="0" 
                                            Background="{StaticResource WarningBrush}"
                                            CornerRadius="5"
                                            Padding="5"
                                            Margin="0,0,14,0">
                                        <Path Data="{StaticResource ReportsIcon}" 
                                              Fill="White" 
                                              Width="16" Height="16" 
                                              Stretch="Uniform"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Reports &amp; Analytics" 
                                                  FontWeight="SemiBold"
                                                  FontSize="13"/>
                                        <TextBlock Text="Comprehensive security reports" 
                                                  FontSize="10"
                                                  Opacity="0.8"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" 
                                              Text="{Binding TotalReports}" 
                                              FontSize="11" 
                                              FontWeight="Bold"
                                              Foreground="{StaticResource PrimaryColor}"/>
                                </Grid>
                            </Button>
                            
                            <!-- Professional Divider -->
                            <Rectangle Height="1" 
                                      Fill="#30FFFFFF" 
                                      Margin="10,16"/>
                            
                            <!-- Quick Actions -->
                            <TextBlock Text="QUICK ACTIONS" 
                                      FontSize="11" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource PrimaryColor}" 
                                      Margin="10,8,0,10"/>
                            
                            <!-- Professional Quick Scan -->
                            <Button Classes="action-enterprise" 
                                    Command="{Binding StartQuickScanCommand}">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Path Grid.Column="0" 
                                          Data="{StaticResource ZapIcon}" 
                                          Fill="White" 
                                          Width="16" Height="16" 
                                          Stretch="Uniform" 
                                          Margin="0,0,10,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Quick Security Scan" 
                                                  FontWeight="Bold"
                                                  FontSize="13"/>
                                        <TextBlock Text="Rapid vulnerability assessment" 
                                                  FontSize="10"
                                                  Opacity="0.9"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                            
                            <!-- Professional Divider -->
                            <Rectangle Height="1" 
                                      Fill="#20FFFFFF" 
                                      Margin="10,16"/>
                            
                            <!-- Administration -->
                            <TextBlock Text="ADMINISTRATION" 
                                      FontSize="11" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource PrimaryColor}" 
                                      Margin="10,0,0,10"/>
                                      
                            <!-- Settings -->
                            <Button Classes="nav-enterprise" 
                                    Command="{Binding NavigateToSettingsCommand}">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Border Grid.Column="0" 
                                            Background="{StaticResource SecondaryTextBrush}"
                                            CornerRadius="5"
                                            Padding="5"
                                            Margin="0,0,14,0">
                                        <Path Data="{StaticResource SettingsIcon}" 
                                              Fill="White" 
                                              Width="16" Height="16" 
                                              Stretch="Uniform"/>
                                    </Border>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Settings &amp; Configuration" 
                                                  FontWeight="SemiBold"
                                                  FontSize="13"/>
                                        <TextBlock Text="System preferences" 
                                                  FontSize="10"
                                                  Opacity="0.8"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 📊 REFINED FOOTER -->
                    <Border Grid.Row="2" 
                            Padding="{StaticResource SpacingL},{StaticResource SpacingS}" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{StaticResource GlassBrush}"
                            Background="{StaticResource SurfaceBrush}">
                        <StackPanel Spacing="6">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                          Text="VaultScope Enterprise" 
                                          FontSize="12" 
                                          FontWeight="Bold"
                                          Foreground="White"/>
                                <TextBlock Grid.Column="1"
                                          Text="v1.0.0" 
                                          FontSize="11" 
                                          Foreground="{StaticResource SecondaryTextBrush}"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Background="{StaticResource SuccessBrush}"
                                        Width="6" Height="6"
                                        CornerRadius="3"/>
                                <TextBlock Text="All systems operational" 
                                          FontSize="10" 
                                          FontWeight="Medium"
                                          Foreground="{StaticResource SuccessBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Content Separator -->
            <Rectangle Grid.Column="1" Fill="{StaticResource GlassBrush}" Opacity="0.8"/>

            <!-- 🎨 REFINED CONTENT AREA -->
            <Grid Grid.Column="2" Background="{StaticResource AppBackgroundBrush}">
                        
                <!-- Smooth Page Transitions -->
                <TransitioningContentControl Content="{Binding CurrentPage}" 
                                           Margin="{StaticResource SpacingXL}">
                    <TransitioningContentControl.PageTransition>
                        <PageSlide Duration="0:0:0.4" Orientation="Horizontal"/>
                    </TransitioningContentControl.PageTransition>
                </TransitioningContentControl>
            </Grid>
        </Grid>

        <!-- 📊 REFINED STATUS BAR -->
        <Border Grid.Row="2" 
                Background="{StaticResource CardBackgroundBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource GlassBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Professional Status Message -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           Spacing="10" 
                           Margin="16,0"
                           VerticalAlignment="Center">
                    <Path Data="{StaticResource InfoIcon}" 
                          Fill="{StaticResource PrimaryColor}" 
                          Width="14" Height="14"
                          Stretch="Uniform"/>
                    <TextBlock Text="{Binding StatusText}" 
                              Foreground="{StaticResource PrimaryTextBrush}" 
                              FontSize="12"
                              FontWeight="Medium"/>
                </StackPanel>

                <!-- Professional Connection Status -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="6" 
                           Margin="12,0"
                           VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" 
                            Fill="{Binding ConnectionStatusColor}">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="{Binding ConnectionStatusColor}" 
                                            Opacity="0.7" 
                                            BlurRadius="4"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                              Foreground="{StaticResource SecondaryTextBrush}" 
                              FontSize="11"
                              FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Professional Scan Progress -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           Spacing="6" 
                           Margin="12,0"
                           VerticalAlignment="Center"
                           IsVisible="{Binding IsScanning}">
                    <controls:AnimatedSpinner Width="14" Height="14"/>
                    <TextBlock Text="{Binding ScanProgress}" 
                              Foreground="{StaticResource PrimaryColor}" 
                              FontSize="11"
                              FontWeight="Bold"/>
                </StackPanel>

                <!-- Professional Memory Usage -->
                <StackPanel Grid.Column="3" 
                           Orientation="Horizontal" 
                           Spacing="6" 
                           Margin="12,0"
                           VerticalAlignment="Center">
                    <Path Data="{StaticResource ActivityIcon}" 
                          Fill="{StaticResource SecondaryTextBrush}" 
                          Width="12" Height="12"
                          Stretch="Uniform"/>
                    <TextBlock Text="{Binding MemoryUsage}" 
                              Foreground="{StaticResource SecondaryTextBrush}" 
                              FontSize="10"/>
                </StackPanel>

                <!-- Professional Time Display -->
                <StackPanel Grid.Column="4" 
                           Orientation="Horizontal" 
                           Spacing="6" 
                           Margin="16,0"
                           VerticalAlignment="Center">
                    <Path Data="{StaticResource ClockIcon}" 
                          Fill="{StaticResource SecondaryTextBrush}" 
                          Width="12" Height="12"
                          Stretch="Uniform"/>
                    <TextBlock Text="{Binding CurrentTime}" 
                              Foreground="{StaticResource SecondaryTextBrush}" 
                              FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>