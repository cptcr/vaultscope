<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:VaultScope.UI.Controls">
    
    <Design.PreviewWith>
        <controls:NavigationButton Text="Dashboard" />
    </Design.PreviewWith>
    
    <ControlTheme x:Key="{x:Type controls:NavigationButton}" TargetType="controls:NavigationButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="16,0">
                    <Grid ColumnDefinitions="Auto,*">
                        <Path Grid.Column="0"
                              Data="{TemplateBinding Icon}"
                              Fill="{DynamicResource TextSecondaryBrush}"
                              Width="20"
                              Height="20"
                              Stretch="Uniform"
                              VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="{TemplateBinding Text}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"
                                   FontSize="14"/>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:pointerover /template/ Border#PART_Border">
            <Setter Property="Background" Value="#1A8B5CF6"/>
        </Style>
        
        <Style Selector="^:pointerover /template/ Path">
            <Setter Property="Fill" Value="{DynamicResource AccentBrush}"/>
        </Style>
        
        <Style Selector="^:pointerover /template/ TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
        </Style>
        
        <Style Selector="^:selected /template/ Border#PART_Border">
            <Setter Property="Background" Value="#2A8B5CF6"/>
        </Style>
        
        <Style Selector="^:selected /template/ Path">
            <Setter Property="Fill" Value="{DynamicResource AccentBrush}"/>
        </Style>
        
        <Style Selector="^:selected /template/ TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style Selector="^:pressed /template/ Border#PART_Border">
            <Setter Property="Background" Value="#3A8B5CF6"/>
        </Style>
    </ControlTheme>
</ResourceDictionary>