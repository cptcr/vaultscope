{
  "test_configuration": {
    "name": "VaultScope Enterprise Cross-Platform Test Suite",
    "version": "1.0.0",
    "description": "Comprehensive testing configuration for VaultScope Enterprise",
    "platforms": {
      "supported": [
        "Windows 10/11",
        "Ubuntu 20.04+",
        "RHEL 8+",
        "Arch Linux",
        "Debian 11+"
      ],
      "tested": [
        "Windows 11",
        "Ubuntu 22.04",
        "Arch Linux"
      ]
    },
    "requirements": {
      "java": {
        "minimum_version": "17",
        "recommended_version": "21",
        "vendors": ["OpenJDK", "Oracle JDK", "Amazon Corretto"]
      },
      "maven": {
        "minimum_version": "3.6",
        "recommended_version": "3.9"
      },
      "system": {
        "minimum_ram": "512MB",
        "recommended_ram": "1GB",
        "disk_space": "500MB"
      }
    },
    "test_suites": {
      "environment": {
        "name": "Environment Setup Tests",
        "description": "Validate development environment and prerequisites",
        "tests": [
          "java_version_check",
          "maven_installation",
          "git_availability",
          "platform_specific_tools"
        ],
        "timeout": 60,
        "critical": true
      },
      "build": {
        "name": "Build Process Tests",
        "description": "Test Maven build process and compilation",
        "tests": [
          "maven_compile",
          "maven_package",
          "dependency_resolution",
          "resource_processing"
        ],
        "timeout": 300,
        "critical": true
      },
      "unit_tests": {
        "name": "Unit Test Suite",
        "description": "Execute all unit tests",
        "tests": [
          "core_functionality",
          "security_validation",
          "ui_components",
          "utility_classes"
        ],
        "timeout": 180,
        "critical": true,
        "coverage_threshold": 80
      },
      "integration_tests": {
        "name": "Integration Test Suite",
        "description": "Execute integration tests",
        "tests": [
          "end_to_end_scanning",
          "report_generation",
          "database_operations",
          "file_system_operations"
        ],
        "timeout": 300,
        "critical": true
      },
      "security_tests": {
        "name": "Security Analysis",
        "description": "Security scanning and vulnerability checks",
        "tests": [
          "dependency_vulnerabilities",
          "static_code_analysis",
          "security_patterns",
          "input_validation"
        ],
        "timeout": 600,
        "critical": false
      },
      "artifacts": {
        "name": "Artifact Validation",
        "description": "Validate build artifacts and packaging",
        "tests": [
          "jar_validation",
          "runtime_image",
          "native_installers",
          "checksums"
        ],
        "timeout": 120,
        "critical": true
      },
      "runtime": {
        "name": "Runtime Execution Tests",
        "description": "Test application runtime execution",
        "tests": [
          "application_startup",
          "basic_functionality",
          "error_handling",
          "graceful_shutdown"
        ],
        "timeout": 90,
        "critical": true
      }
    },
    "quality_gates": {
      "code_coverage": {
        "minimum": 80,
        "target": 90
      },
      "security_vulnerabilities": {
        "critical": 0,
        "high": 0,
        "medium": 5,
        "low": 20
      },
      "performance": {
        "startup_time": 10,
        "memory_usage": 256,
        "scan_duration": 300
      }
    },
    "reporting": {
      "formats": ["json", "html", "junit"],
      "output_directory": "test-reports",
      "include_screenshots": true,
      "include_logs": true,
      "retention_days": 30
    },
    "notifications": {
      "email": {
        "enabled": false,
        "recipients": ["team@example.com"]
      },
      "slack": {
        "enabled": false,
        "webhook_url": "",
        "channel": "#vaultscope-builds"
      },
      "github": {
        "enabled": true,
        "status_checks": true,
        "pr_comments": true
      }
    },
    "ci_cd_integration": {
      "github_actions": {
        "workflow_file": ".github/workflows/ci-cd-pipeline.yml",
        "trigger_events": ["push", "pull_request"],
        "matrix_builds": true
      },
      "jenkins": {
        "enabled": false,
        "pipeline_script": "Jenkinsfile"
      },
      "azure_devops": {
        "enabled": false,
        "pipeline_file": "azure-pipelines.yml"
      }
    },
    "environment_variables": {
      "test": {
        "JAVA_OPTS": "-Xmx512m -Djava.awt.headless=true",
        "MAVEN_OPTS": "-Xmx256m",
        "VAULTSCOPE_TEST_MODE": "true",
        "VAULTSCOPE_LOG_LEVEL": "DEBUG"
      },
      "production": {
        "JAVA_OPTS": "-Xmx1g",
        "MAVEN_OPTS": "-Xmx512m",
        "VAULTSCOPE_LOG_LEVEL": "INFO"
      }
    },
    "test_data": {
      "sample_apis": [
        "http://localhost:8080/api/test",
        "http://127.0.0.1:3000/vulnerable",
        "https://localhost:8443/secure"
      ],
      "expected_vulnerabilities": [
        "SQL_INJECTION",
        "XSS_REFLECTED",
        "PATH_TRAVERSAL"
      ],
      "test_payloads": "src/test/resources/payloads/"
    },
    "debugging": {
      "verbose_logging": true,
      "save_artifacts": true,
      "screenshot_on_failure": true,
      "core_dump_analysis": false
    }
  }
}